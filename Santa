    <script>
        let arStarted = false;
        
        function showStatus(message, type = 'info') {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = `status ${type}`;
            status.style.display = 'block';
            
            // Auto-hide after 3 seconds unless it's an error
            if (type !== 'error') {
                setTimeout(() => {
                    status.style.display = 'none';
                }, 3000);
            }
        }
        
        function startAR() {
            if (arStarted) return;
            
            // Hide instructions
            document.getElementById('instructions').classList.add('hidden');
            
            // Show AR scene
            document.getElementById('arScene').style.display = 'block';
            arStarted = true;
            
            showStatus('üì∑ Starting camera... Please allow access!');
            
            // Listen for marker events
            const marker = document.querySelector('#demo-marker');
            
            marker.addEventListener('markerFound', function() {
                console.log('Santa sign detected!');
                showStatus('üéÖ Santa detected! Take a photo!', 'success');
            });
            
            marker.addEventListener('markerLost', function() {
                console.log('Santa sign lost');
                showStatus('üìÑ Point camera at the sign to see Santa');
            });
        }
        
        // Handle camera permissions and errors
        window.addEventListener('load', function() {
            // Check HTTPS
            if (location.protocol !== 'https:' && location.hostname !== 'localhost') {
                showStatus('‚ö†Ô∏è HTTPS required for camera access. Upload to GitHub Pages or Netlify!', 'error');
            }
        });
    </script>
